{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "module": "es2015",
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "strict": true,
    "sourceMap": true,
    "paths": {
      "@utilities/*": [
        "utilities/*"
      ],
      "@validators/*": [
        "validators/*"
      ]
    }
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
